<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:background="@color/colorPrimaryDark"
    tools:context=".addpet">
    <!-- F5CB5C #FCE196  #ED6B69 FCE196-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="أسم النشاط"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />

            <EditText
                android:id="@+id/adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:ems="10"
                android:gravity="right"
                android:hint="عنوان النشاط "
                android:inputType="textShortMessage|textLongMessage"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff"
                android:textStyle="bold"
                tools:targetApi="jelly_bean_mr1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />

            <EditText
                android:id="@+id/descrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:ems="10"
                android:gravity="right"
                android:hint="وصف النشاط "
                android:inputType="textShortMessage|textLongMessage"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff"
                android:textStyle="bold"
                tools:targetApi="jelly_bean_mr1" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp">


            </LinearLayout>


            <Button
                android:id="@+id/addbutton"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#008000"
                android:clickable="true"
                android:focusable="true"
                android:onClick="addpet"
                android:padding="16dp"
                android:text="حفظ"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>